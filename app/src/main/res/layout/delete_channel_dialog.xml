<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/size_large"
            android:layout_marginStart="@dimen/size_large"
            app:cardCornerRadius="@dimen/size_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_large"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginEnd="@dimen/size_large"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/do_you_want_delete_channel"
                    android:textColor="@color/text"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_medium"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCancelDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_huge"
                        android:layout_toStartOf="@+id/tvDeleteChannel"
                        android:clickable="true"
                        android:focusable="true"
                        android:letterSpacing="0.1"
                        android:text="@string/cancel"
                        android:textAllCaps="true"
                        android:textColor="@color/accent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/tvDeleteChannel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/size_medium"
                        android:clickable="true"
                        android:focusable="true"
                        android:letterSpacing="0.1"
                        android:text="@string/ok"
                        android:textColor="@color/accent"

                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>

