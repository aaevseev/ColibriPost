<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.settings.SettingsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_settings_fragment_title"
        style="@style/fragmentTitleStyle"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="@string/settings_fragment_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/user_info_background_color"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_settings_fragment_title">

        <ImageView
            android:id="@+id/iv_user_image"
            android:layout_width="@dimen/user_image_size"
            android:layout_height="@dimen/user_image_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_large"
            android:contentDescription="@string/user_image_description" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_user_name"
            style="@style/userNameTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_normal"
            android:lineSpacingExtra="8sp"
            tools:text="Chuck Norris" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_user_subscription"
            style="@style/user_subscription_text_style"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_extra_large"
            android:background="@drawable/user_subscription_ok_background"
            android:gravity="center_vertical"
            android:lineSpacingExtra="16sp"
            android:paddingStart="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_normal"
            tools:text="31 день" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_settings_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/settings_menu_background"
        android:translationY="@dimen/negative_translation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_user_info"
        tools:listitem="@layout/item_setting_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>