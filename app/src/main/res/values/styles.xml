<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlNormal">@color/accent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="DialogFullScreen" parent="android:Theme.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>

        <!--прозрачный, без заголовка, не плавающий-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationViewHeight">@dimen/bottom_navigation_height</item>
    </style>

    <style name="fragmentTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/fragment_title_color</item>
        <item name="android:textSize">@dimen/fragment_title_text_size</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="userNameTextStyle">
        <item name="android:textSize">@dimen/user_name_text_size</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/user_name_text_color</item>
    </style>

    <style name="user_subscription_text_style">
        <item name="android:textSize">@dimen/user_subscription_text_size</item>
        <item name="android:textColor">@color/user_subscription_text_color</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="item_setting_menu_text_style">
        <item name="android:textSize">@dimen/item_setting_menu_text_size</item>
        <item name="android:textColor">@color/item_setting_menu_text_color</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <attr name="bottomNavigationViewHeight" format="dimension" />
</resources>