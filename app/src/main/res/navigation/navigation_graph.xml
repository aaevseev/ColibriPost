<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/bottomNavigationFragment">

    <fragment
        android:id="@+id/bottomNavigationFragment"
        android:name="ru.teamdroid.colibripost.presentation.ui.bottomnavigation.BottomNavigationFragment"
        android:label="BottomNavigationFragment" >
        <action
            android:id="@+id/action_bottomNavigationFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_bottomNavigationFragment_to_newPostFragment"
            app:destination="@id/newPostFragment"
            app:popUpTo="@id/bottomNavigationFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_bottomNavigationFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.teamdroid.colibripost.presentation.ui.main.MainFragment"
        tools:layout="@layout/fragment_main"
        android:label="MainFragment" />

    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.teamdroid.colibripost.presentation.ui.newpost.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.teamdroid.colibripost.presentation.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>